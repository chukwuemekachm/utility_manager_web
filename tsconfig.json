{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es3",
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "experimentalDecorators": true,
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "errorsAsWarnings": true
  }
}
